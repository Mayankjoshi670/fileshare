<%- include ("includes/header", {
    "title": "Register"
 }) %>
 
 <div class="container my-5">
     <div class="row justify-content-center">
         <div class="col-md-8 col-lg-6">
             <%- include ("includes/ResponseAlert", {
                 "request": request
             }) %>
             
             <div class="card shadow-sm border-0">
                 <div class="card-header bg-primary text-white py-3">
                     <h3 class="mb-0 text-center">Create Your Account</h3>
                 </div>
                 <div class="card-body p-4">
                     <form action="<%= request.mainURL %>/Register" method="POST">
                         <div class="mb-3">
                             <label for="name" class="form-label">Full Name</label>
                             <input 
                                 type="text" 
                                 id="name"
                                 placeholder="Enter your full name" 
                                 name="name" 
                                 class="form-control form-control-lg" 
                                 required 
                             />
                             <small class="text-muted">As you'd like it to appear</small>
                         </div>
 
                         <div class="mb-3">
                             <label for="email" class="form-label">Email Address</label>
                             <input 
                                 type="email" 
                                 id="email"
                                 placeholder="Enter your email" 
                                 name="email" 
                                 class="form-control form-control-lg" 
                                 required 
                             />
                             <small class="text-muted">We'll never share your email</small>
                         </div>
 
                         <div class="mb-4">
                             <label for="password" class="form-label">Password</label>
                             <input 
                                 type="password" 
                                 id="password"
                                 placeholder="Create a password" 
                                 name="password" 
                                 class="form-control form-control-lg" 
                                 required 
                             />
                             <div class="password-requirements mt-2">
                                 <small class="text-muted">Password must contain:</small>
                                 <ul class="list-unstyled ms-3">
                                     <li class="text-muted small"><i class="bi bi-check-circle-fill text-success me-1"></i> At least 8 characters</li>
                                     <li class="text-muted small"><i class="bi bi-check-circle-fill text-success me-1"></i> One uppercase letter</li>
                                     <li class="text-muted small"><i class="bi bi-check-circle-fill text-success me-1"></i> One number</li>
                                 </ul>
                             </div>
                         </div>
 
                         <div class="mb-3 form-check">
                             <input type="checkbox" class="form-check-input" id="terms" required>
                             <label class="form-check-label" for="terms">
                                 I agree to the <a href="#" class="text-decoration-none">Terms of Service</a> and <a href="#" class="text-decoration-none">Privacy Policy</a>
                             </label>
                         </div>
 
                         <button type="submit" class="btn btn-primary btn-lg w-100 py-2 mb-3">
                             Create Account
                         </button>
                         
                         <div class="text-center pt-3">
                             <p class="mb-0">Already have an account? <a href="<%= request.mainURL %>/login" class="text-decoration-none">Sign in</a></p>
                         </div>
                     </form>
                 </div>
             </div>
         </div>
     </div>
 </div>
 
 <%- include ("includes/footer") %>